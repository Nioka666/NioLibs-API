generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum AdminRoles {
  Admin
  Petugas
}

model Admins {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  nama_lengkap      String
  username          String     @unique
  email             String     @unique
  password          String
  level             AdminRoles
  tanggal_bergabung DateTime
}

model Users {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  nama_lengkap      String?
  username          String
  email             String    @unique
  password          String
  alamat            String?
  tanggal_bergabung DateTime?

  @@map("users")
}

model Bukus {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  judul        String
  cover        String
  stok         Int
  penulis      String
  penerbit     String
  deskripsi    String
  tahun_terbit DateTime

  @@map("bukus")
}
