generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  nama_lengkap      String?
  username          String
  email             String    @unique
  password          String
  alamat            String?
  tanggal_bergabung DateTime?

  @@map("users")
}

model Posts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  published Boolean? @default(false)
  usersId   String?  @db.ObjectId

  @@map("posts")
}
